{
	"manifest_version": 3,
	"name": "Procrastabs",
	"version": "1.0.0",
	"description": "Limits the number of open tabs",
	"permissions": ["tabs", "storage", "scripting"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}
